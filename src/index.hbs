{{#withParams}}
  <!DOCTYPE html>

  <head>
    <title>Ben Calabrese Resume</title>
  </head>

  <body>
    <main>
      <section class="title">
        <h1>
          {{ name }}
        </h1>
        <h2 class="subtitle">Web Developer</h2>
      </section>
      <section class="chevrons">
        <img inline src="{{asset 'chevron.svg'}}" />
        <img inline src="{{asset 'chevron.svg'}}" />
        <img inline src="{{asset 'chevron.svg'}}" />
      </section>

      <h2 class="profile-label">Profile</h2>

      <section class="profile enclosure">
        <section class="contact has-overlay collapsible has-initially-collapsed-heading">
          <h3 class="initially-collapsed-heading">Contact</h3>
          {{> overlay }}
          <div>
            {{> contact contact}}
          </div>
        </section>

        <div class="divider"></div>

        <h3>Skills</h3>
        <section class="skills has-overlay collapsible">
          {{> overlay}}
          <ul class="extra-spacing">
            {{#each skills as |skill|}}
              {{>skill skill}}
            {{/each}}
          </ul>
        </section>

        <div class="divider"></div>

        <h3>Education</h3>
        <section class="education has-overlay collapsible">
          {{> overlay}}
          <div>
            {{>appAcademy}}
            {{>sfState}}
          </div>
        </section>
      </section>

      <section class="history enclosure">
        <section class="experience">
          <h3>Experience</h3>
          {{#each experiences as |experience|}}
            {{>project experience}}
          {{/each}}
        </section>

        <div class="divider"></div>

        <section class="projects">
          <h3>Projects</h3>
          {{#each projects as |project|}}
            {{>project project}}
          {{/each}}
        </section>
      </section>
    </main>
  </body>
{{/withParams}}